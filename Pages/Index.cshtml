@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Documento</td>
            <td>Edad</td>
            <td>Opciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListPerson)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nombre</td>
                <td>@item.apellido</td>
                <td>@item.dni</td>
                <td>@item.edad</td>
                <td>
                    <form method="post">
                        <a asp-route-id="@item.id" asp-page="View" class="btn btn-primary">detalle</a>
                        <button class="btn btn-danger" asp-route-id="@item.id" asp-page-handler="delete">borrar</button>
                    </form>

                </td>
            </tr>

        }



    </tbody>

</table>
